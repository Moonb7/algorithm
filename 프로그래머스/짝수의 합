using System;

public class Solution {
    public int solution(int n) {
        int result = 0;
        for(int i = 0; i <= n; i++)
        {
            if(i % 2 == 0)
            {
               result += i;
            }
        }
        return result;
    }
}

JavaScript
function solution(n) {
    let answer = 0;
    for(let i = 1; i <= n; i++)
    {
        if(i % 2 == 0)
        {
            answer += i;
        }
    }
    return answer;
}
