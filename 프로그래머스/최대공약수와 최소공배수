public static int[] solution(int n, int m)
{
    int[] answer = new int[2]; // 최대공약수, 최대공배수

    int gcd = Getgcd(n, m); // 유클리드 호제법을 참고하여 재귀함수로 구현
    int lcm = n*m / gcd; // 최소공배수 공식 : 두수를 곱하고 최대공약수로 나누기

    answer[0] = gcd;
    answer[1] = lcm;

    return answer;
}

public static int Getgcd(int a, int b)
{
    int r = a % b; // 나머지 구하기

    if (r == 0)
    {
        return b;
    }
    else
    {
        return Getgcd(b, r);
    }
    
}
